{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "outDir": "./dist",
    "rootDir": ".",
    "strict": true,
    "declaration": true,
    "skipLibCheck": true
  },
  "include": [
    "src/**/*.ts" // Be more specific to only include source files
  ],
  "exclude": [
    "node_modules",
    "dist",
    "elevenlabs-docs", // Exclude the submodule
    "etl" // Exclude the ETL scripts directory
  ]
}
